# http://editorconfig.org
root = true   #是否是顶级配置文件，设置为true的时候才会停止搜索.editorconfig文件

[*] #匹配除/之外的任意字符
indent_style = space  #缩进方式
indent_size = 2   #缩进大小
end_of_line = lf  #换行符类型
charset = utf-8   #编码格式
trim_trailing_whitespace = true   #是否删除行尾空格
insert_final_newline = true   #是否让文件以空行结束
tab_width = 2   #tab健空出大小

[*.md]  #md结尾文件规则
trim_trailing_whitespace = false

[Makefile]  #Makefile文件规则
indent_style = tab
